@{
    ViewData["Title"] = "Home Page";
}

@*<img src="https://scx1.b-cdn.net/csz/news/800/2017/theoreticala.jpg" alt=”an artist's rendition of a black hole in space”>*@
<div>     
<div class="text-center">
    <h1 class="display-4"> <span class="glyphicon glyphicon-book"></span> Book Central </h1>


    @if (!User.Identity.IsAuthenticated)
    {
        
        <div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body" style="background-color:burlywood">
        <h5 class="card-title">Personal Collection</h5>
        <p class="card-text">Go to your collection or start adding today!</p>
        <a class="btn btn-primary" asp-area="" asp-controller="Books" asp-action="Index">Personal</a>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body" style="background-color:burlywood">
        <h5 class="card-title">Find a Book</h5>
        <p class="card-text">Find any book and add it to your shelf!!</p>
        <a class="btn btn-primary" asp-area="" asp-controller="List" asp-action="Index">Find</a>
      </div>
    </div>
  </div>
</div>
            
            
    }
    else
    {
        <div class="text-center">
            <br />
        <h1>Welcome Back , @User.Identity.Name.Remove(User.Identity.Name.IndexOf("@"))!</h1>
        <div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body" style="background-color:burlywood">
        <h5 class="card-title">Personal Collection</h5>
        <p class="card-text">Go to your collection or start adding today!</p>
        <a class="btn btn-primary" asp-area="" asp-controller="Books" asp-action="Index">Personal</a>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body" style="background-color:burlywood">
        <h5 class="card-title">Find a Book</h5>
        <p class="card-text">Find any book and add it to your shelf!</p>
        <a class="btn btn-primary" asp-area="" asp-controller="List" asp-action="Index">Find</a>
      </div>
    </div>
  </div>
</div>
    </div>
    }

         </div>    