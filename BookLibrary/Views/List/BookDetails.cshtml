@using BookLibrary.Models

@model SearchedBooks
@*@{
    ViewData["Title"] = "Books";
}*@
<form method="post" action="/List/BookDetails">
<table class="table">

        <div class="card mb-3" style="max-width: 540px; background-color:tan">
            <div class="row g-0">
                <div class="col-md-4">

                    @*<img src="@book.Image">*@
                <a href="https://www.google.com/search?q=.@ViewBag.bookToAdd.BookTitle.@ViewBag.bookToAdd.AuthorLastName"> <img src="@ViewBag.bookToAdd.Image" /></a>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                    <h5 class="card-title"><b><a asp-controller="Books" asp-action="Detail" asp-route-APIBookID="@ViewBag.bookToAdd.APIBookID" asp-route-url="/List" style="color:black">@ViewBag.bookToAdd.BookTitle</a></b></h5>
                        <p class="card-text">
                        By: @ViewBag.bookToAdd.AuthorLastName
                            <br>
                            Genre: @ViewBag.bookToAdd.Genre <br>
                            Number of Pages: @ViewBag.bookToAdd.NumberOfPages <br>

                        </p>


                        <div class="card-footer">

                            <input type="hidden" value="@ViewBag.bookToAdd.APIBookID" name="bookId">
                            <input type="submit" class="btn btn-success text-dark" value="Add Book" />

               
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
</table>
</form>